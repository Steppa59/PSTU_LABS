#include <iostream>
using namespace std;
int main()
{
int nums[500];
int D;
setlocale(LC_ALL, "Russian");
cout << " Введите длину массива :  ";
cin >> D;
for (int i = 0; i < D; i++)
{
nums[i] = 1 + rand()%500;
cout << " "  << nums[i];
}

int min = nums[0];
int minN = 0;
for (int i = 0; i < D; i++)
{
if (nums[i] < min) {
min = nums[i];
minN = i;
}
}
cout <<"\n";
for (int i = minN; i<D-1; i++){
    nums[i]=nums[i+1];
}
cout << "Массив после удаления минимального числа имеет вид:" ;
cout <<"\n";
for (int i = 0; i<D-1; i++){
cout << " "<< nums[i] ;
}
cout <<"\n";
int N;
cout << "Введите количество элементов которые нужно вставить   :  ";
cin >> N;
int K;
cout << "Начиная с элемента :  ";
cin >> K;
for (int i=D-1+N;i>K;i--) {
nums[i] = nums[i-N];
}
for (int i=K;i<K+N;i++) {
nums[i] = 1 + rand()%501;
}
for (int i = 0; i<D-1+N; i++){
cout <<  " " << nums[i] ;
}
int X;
for (int i = 0;i<D-1+N-1;i=i+2){
X=nums[i];
nums[i]=nums[i+1];
nums[i+1]=X;
}
cout <<"\n";
for (int i = 0; i<D-1+N; i++){
cout << " "  << nums[i] ;
}
int nomerN=-1;
cout <<"\n";
int Y;
cout << "Введите элемент который нужно найти :  ";
cin >> Y;
for (int i = 0; i<D-1+N; i++){
if (nums[i]==Y){   nomerN=i;
}
}
int P=0;
if (nomerN>0){
while (Y!=nums[P]){
P=P+1;
}
P=P+1;
//cout << "Элемент находится в массиве под номером : "<< nomerN;
//cout <<"\n";
cout << "Для нахождения данного числа пришлось перебрать " << P <<  " чисел/числа";
}
if (nomerN<0){
cout << "Данный элемент не найден";
}
cout <<"\n";
int ia,ja,xa;
for(ia=1;ia<D-1+N;ia++)
{
  xa=nums[ia];
  ja=ia-1;
  while(xa<nums[ja]&&ja>=0)
  {
    nums[ja+1]=nums[ja];
    ja--;
  }
  nums[ja+1]=xa;
}
cout << "Массив после сортировки по возростанию имеет вид : " <<"\n";
for (int i = 0; i<D-1+N; i++){
cout <<  " " << nums[i] ;
}


return 0;
} 
